{
  "environments": [
    {
      "browserName": "chrome",
      "chromeOptions": {
        "args": [
          "headless",
          "disable-gpu",
          "window-size=1024x768"
        ]
      },
      "fixSessionCapabilities": "no-detect"
    }
  ],
  "suites": "target/frontend-tests/*.spec.js",
  "tunnelOptions": {
    "drivers": [
      { "name": "chrome", "version": "2.36" }
    ]
  },
  "plugins": {
    "script": "src/test/frontend/utils.js",
    "useLoader": true
  }
}
